<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/teal_7001"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/standAloneToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StandAlone Toolbar"
        app:layout_constraintBottom_toTopOf="@+id/actionbarToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/actionbarToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toolbar as Actionbar"
        app:layout_constraintBottom_toTopOf="@+id/contextualMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/standAloneToolbar" />

    <Button
        android:id="@+id/contextualMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contextual Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionbarToolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>